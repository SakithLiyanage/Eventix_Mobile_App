<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:elevation="8dp"
    android:outlineSpotShadowColor="#000000"
    tools:context=".home">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="370dp"
                android:layout_height="98dp"
                android:layout_marginTop="230sp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:outlineAmbientShadowColor="#000000"
                android:outlineSpotShadowColor="#090707"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="370dp"
                android:layout_height="98dp"
                android:layout_marginTop="130sp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:outlineAmbientShadowColor="#000000"
                android:outlineSpotShadowColor="#090707"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="154dp"
                    android:layout_height="99dp"
                    app:srcCompat="@drawable/event5" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="201dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:fontFamily="@font/league_spartan"
                        android:text="@string/Sandalwood_Sounds_Acoustic_Night"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/ticket1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="68dp"
                        android:width="200px"
                        android:backgroundTint="#E92020"
                        android:fontFamily="@font/league_spartan"
                        android:text="@string/Delete"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView20"
                        app:layout_constraintTop_toBottomOf="@+id/textView20" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="370dp"
                android:layout_height="98dp"
                android:layout_marginTop="20sp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:outlineAmbientShadowColor="#000000"
                android:outlineSpotShadowColor="#090707"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="154dp"
                    android:layout_height="99dp"
                    app:srcCompat="@drawable/event3" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="96dp"
                        android:fontFamily="@font/league_spartan"
                        android:text="@string/Jaffna_Crab_Feast"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="16dp" />

                    <Button
                        android:id="@+id/ticket1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="60dp"
                        android:width="200px"
                        android:backgroundTint="#E92020"
                        android:fontFamily="@font/league_spartan"
                        android:text="@string/Delete"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView20"
                        app:layout_constraintTop_toBottomOf="@+id/textView20" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="370dp"
                android:layout_height="98dp"
                android:layout_marginTop="20sp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:outlineAmbientShadowColor="#000000"
                android:outlineSpotShadowColor="#090707"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_bookings">

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="154dp"
                    android:layout_height="99dp"
                    app:srcCompat="@drawable/event1" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="44dp"
                        android:fontFamily="@font/league_spartan"
                        android:text="@string/Kandy_Perahera_Experience"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:layout_editor_absoluteY="16dp" />

                    <Button
                        android:id="@+id/ticket1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="56dp"
                        android:width="200px"
                        android:backgroundTint="#E92020"
                        android:fontFamily="@font/league_spartan"
                        android:text="@string/Delete"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/textView20"
                        app:layout_constraintTop_toBottomOf="@+id/textView20" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/league_spartan"
                android:text="@string/Sakith_Liyanage"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView23" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/user_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView25" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="142dp"
                android:layout_height="106dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_account_circle_24" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <Button
                android:id="@+id/my_bookings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/league_spartan"
                android:text="@string/MY_BOOKINGS"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView28" />

            <Button
                android:id="@+id/prev_bookings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/league_spartan"
                android:text="@string/PREVIOUS_BOOKINGS"
                android:textColor="@color/primary_color"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/my_bookings"
                app:layout_constraintTop_toBottomOf="@+id/textView28" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="95dp"
        android:background="@drawable/rounded_rectangle"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/explore"
            android:layout_width="74dp"
            android:layout_height="35dp"
            android:layout_margin="90px"
            android:layout_weight="1"
            android:maxWidth="100px"
            android:minWidth="100px"
            app:srcCompat="@drawable/explore_icon" />

        <ImageView
            android:id="@+id/events"
            android:layout_width="61dp"
            android:layout_height="38dp"
            android:layout_margin="90px"
            android:layout_weight="1"
            android:maxWidth="100px"
            android:minWidth="100px"
            app:srcCompat="@drawable/calendar_icon" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="56dp"
            android:layout_height="41dp"
            android:layout_margin="90px"
            android:layout_weight="1"
            android:maxWidth="100px"
            android:minWidth="100px"
            app:srcCompat="@drawable/profile_user_active" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>